<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/card_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/gambar1Armada"
                android:src="@drawable/home_menu1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/gambar2Armada"
                android:src="@drawable/home_menu1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tipeArmada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/amethysta"
                android:gravity="center_vertical"
                android:text="Grand Livina X-Gear"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="110dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/amethysta"
                    android:gravity="center_vertical"
                    android:text="Tahun"
                    android:textColor="@color/colorPrimary"
                    tools:layout_editor_absoluteX="133dp"
                    tools:layout_editor_absoluteY="136dp" />

                <TextView
                    android:id="@+id/tahunArmada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/amethysta"
                    android:gravity="center_vertical"
                    android:text="2014"
                    android:textColor="@color/colorPrimary"
                    tools:layout_editor_absoluteX="133dp"
                    tools:layout_editor_absoluteY="136dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/amethysta"
                    android:gravity="center_vertical"
                    android:text="Jumlah Unit :"
                    android:textColor="@color/colorPrimary"
                    tools:layout_editor_absoluteX="133dp"
                    tools:layout_editor_absoluteY="136dp" />

                <TextView
                    android:id="@+id/jumlahArmada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amethysta"
                    android:gravity="center_vertical"
                    android:text="2014"
                    android:textColor="@color/colorPrimary"
                    tools:layout_editor_absoluteX="133dp"
                    tools:layout_editor_absoluteY="136dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/deskripsiArmada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/amethysta"
                android:gravity="center_vertical"
                android:text="Deskripsi"
                android:textColor="#070707"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="136dp" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>