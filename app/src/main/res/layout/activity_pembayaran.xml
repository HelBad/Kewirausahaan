<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPembayaran">

    <androidx.appcompat.widget.Toolbar
        app:title="Pembayaran"
        android:id="@+id/toolbarPembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/toolbarPembayaran"
        android:background="@color/colorPrimary"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:id="@+id/cardRincian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/toolbarPembayaran">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/gambarAPembayaran"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/home_menu5"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tipeAPembayaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/amethysta"
                            android:gravity="center_vertical"
                            android:text="Daihatsu Sigra"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="133dp"
                            tools:layout_editor_absoluteY="110dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/amethysta"
                                android:gravity="center_vertical"
                                android:text="Kategori : "
                                android:textColor="#070707"
                                tools:layout_editor_absoluteX="133dp"
                                tools:layout_editor_absoluteY="136dp" />
                            <TextView
                                android:id="@+id/jenisAPembayaran"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/amethysta"
                                android:gravity="center_vertical"
                                android:text="Mobil"
                                android:textColor="#070707"
                                tools:layout_editor_absoluteX="133dp"
                                tools:layout_editor_absoluteY="136dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/amethysta"
                                android:gravity="center_vertical"
                                android:text="Tahun : "
                                android:textColor="#070707"
                                tools:layout_editor_absoluteX="133dp"
                                tools:layout_editor_absoluteY="136dp" />
                            <TextView
                                android:id="@+id/tahunAPembayaran"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/amethysta"
                                android:gravity="center_vertical"
                                android:text="2019"
                                android:textColor="#070707"
                                tools:layout_editor_absoluteX="133dp"
                                tools:layout_editor_absoluteY="136dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/amethysta"
                        android:gravity="center_vertical"
                        android:text="Fasilitas : "
                        android:textColor="#070707"
                        tools:layout_editor_absoluteX="133dp"
                        tools:layout_editor_absoluteY="136dp" />
                    <TextView
                        android:id="@+id/deskripsiAPembayaran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:gravity="center_vertical"
                        android:text="AC Tarif Biasa"
                        android:textColor="#070707"
                        tools:layout_editor_absoluteX="133dp"
                        tools:layout_editor_absoluteY="136dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/amethysta"
                    android:text="Identitas Customer"
                    android:textColor="#0C0C0C"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="37dp"
                    tools:layout_editor_absoluteY="179dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/icon_person1"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="212dp" />

                    <TextView
                        android:id="@+id/namaPembayar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/amethysta"
                        android:hint="Masukkan nama akun anda"
                        android:textColor="#0B0A0A"
                        android:textSize="15dp"
                        android:background="@android:color/white"
                        tools:layout_editor_absoluteX="103dp"
                        tools:layout_editor_absoluteY="212dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/icon_email"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="212dp" />

                    <TextView
                        android:id="@+id/emailPembayar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/amethysta"
                        android:hint="Masukkan email akun anda"
                        android:textColor="#0B0A0A"
                        android:textSize="15dp"
                        android:background="@android:color/white"
                        tools:layout_editor_absoluteX="103dp"
                        tools:layout_editor_absoluteY="212dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="#8F8B8B"
                    tools:layout_editor_absoluteX="35dp"
                    tools:layout_editor_absoluteY="416dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:text="Lokasi Keberangkatan : "
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <TextView
                        android:id="@+id/textLokasiKeberangkatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:text="Lokasi Tujuan : "
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <TextView
                        android:id="@+id/textLokasiTujuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:text="Berangkat : "
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <TextView
                        android:id="@+id/textTglBerangkat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <TextView
                        android:id="@+id/textJamBerangkat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:text="Pulang : "
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <TextView
                        android:id="@+id/textTglPulang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <TextView
                        android:id="@+id/textJamPulang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:text="Jumlah Unit : "
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <TextView
                        android:id="@+id/textUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:text="Paket Fasilitas : "
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />

                    <TextView
                        android:id="@+id/textPaketBayar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#0C0C0C"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="179dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:background="#8F8B8B"
                    tools:layout_editor_absoluteX="35dp"
                    tools:layout_editor_absoluteY="416dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/amethysta"
                    android:text="Total Biaya"
                    android:textColor="#0C0C0C"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="37dp"
                    tools:layout_editor_absoluteY="179dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp">
                    <TextView
                        android:id="@+id/textBayar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/amethysta"
                        android:textColor="#E8592D"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="103dp"
                        tools:layout_editor_absoluteY="212dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="#8F8B8B"
                    tools:layout_editor_absoluteX="35dp"
                    tools:layout_editor_absoluteY="416dp" />

                <TextView
                    android:id="@+id/textKonfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/amethysta"
                    android:textColor="#555555"
                    android:text="* Tranfer ke Rekening BRI 1234567890 an. Khaf. Kemudian upload foto bukti transfer dengan klik upload dibawah ini."
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="212dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnUpload"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:background="#E8592D"
                            android:fontFamily="@font/amethysta"
                            android:text="UPLOAD"
                            android:textColor="#FAF7F4"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="622dp" />

                        <Button
                            android:id="@+id/btnKonfirm"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:background="#E8592D"
                            android:fontFamily="@font/amethysta"
                            android:text="KONFIRMASI"
                            android:textColor="#FAF7F4"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="622dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>